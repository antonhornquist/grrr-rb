require 'rake/testtask'

task :default => :tests

task :tests => [:test_grrr, :test_unstable]

Rake::TestTask.new(:test_grrr) do |t|
	t.test_files = ["test/tc_grrr.rb"]
	t.warning = true
end

Rake::TestTask.new(:test_unstable) do |t|
	t.test_files = ["test/tc_unstable.rb"]
	t.warning = true
end

task :irb => :environment do
	require 'irb'
	ARGV.clear
	IRB.start
end

# TODO: does not work right now
task :environment do
	$LOAD_PATH.unshift("./lib")
	require 'grrr'
	require 'grrr/screen_grid' if (defined? RUBY_ENGINE != nil) and RUBY_ENGINE == 'jruby'
end
